{
	"manifest_version": 2,
	"name": "Radiowo",
	"version": "0.1",
	"description": "Stream audio of your choosing through WebRTC. Listeners can go to https://radiowo.edwlee.dev to listen in.",
	"icons": {
		"48": "assets/icons/radiowo-48.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"__ORIGIN_REPLACE_THIS__"
	],
	"browser_action": {
		"default_icon": {
			"48": "assets/icons/radiowo-48-lightblue.png"
		},
		"default_title": "Radiowo select",
		"default_popup": "build/popup.html"
	},
	"background": {
		"page": "build/background.html"
	}
}