{
	"manifest_version": 2,
	"name": "Radiowo",
	"version": "0.1",
	"description": "Choose music sources for streaming to Radiowo",
	"icons": {
		"48": "assets/icons/radiowo-48.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage"
	],
	"browser_action": {
		"default_icon": {
			"48": "assets/icons/radiowo-48.png"
		},
		"default_title": "Radiowo select",
		"default_popup": "src/popup/popup.html"
	},
	"background": {
		"page": "src/background/background.html"
	}
}